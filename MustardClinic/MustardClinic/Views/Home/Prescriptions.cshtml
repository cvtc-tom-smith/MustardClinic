@model IEnumerable<MustardClinic.Models.Prescriptions>

@{
    ViewBag.Title = "Prescriptions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="column-left">
    <h2>Prescription List</h2>
</section>


<section class="column-middle">

    <p class="hide">
        @Html.DisplayNameFor(model => model.ImageName)
        @Html.DisplayNameFor(model => model.Title)
        @Html.DisplayNameFor(model => model.Description)
        @Html.DisplayNameFor(model => model.Genre)
        @Html.DisplayNameFor(model => model.PublishedDate)
    </p>

@foreach (var item in Model)
{
    <img src="~/Content/@Html.DisplayFor(modelItem => item.ImageName)" /><br />
    <p>@Html.DisplayFor(modelItem => item.Title)</p><br />
    <p>@Html.DisplayFor(modelItem => item.Description)</p><br />
    <p>@Html.DisplayFor(modelItem => item.Genre)</p><br />
    <p>@Html.DisplayFor(modelItem => item.PublishedDate)</p><br />

}

</section>

<section class="column-right"></section>


